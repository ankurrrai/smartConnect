<li id="comment-<%= cmnt._id %>">
    
        <div class="comment-content">
            <%= cmnt.content %>
            <br>
            <small>
                <%= cmnt.user.email %>
            </small>
            <% if(locals.user){%>
            
                <div class="likes-button">
                    <a href="/likes/toggle/?id=<%= cmnt._id %>&type=Comment" class="toogle-like-button" data-likes="<%= cmnt.likes.length %>"><%= cmnt.likes.length %> <i class="fa fa-thumbs-up"></i></a>
                </div>
                <%} else{%>
                    <div class="likes-button">
                        <p class="toogle-like-button"><%= cmnt.likes.length %> <i class="fa fa-thumbs-up"></i></p>
                    </div>
                <%}
            %>
        </div>

        <% if(locals.user && (locals.user.id == p.user.id || locals.user.id == cmnt.user.id)){%>
                    
            <div class="comment-delete-button">
                <a class="delete-comment-button" href="/comment/destroy/?id=<%= cmnt.id %>">Del Comment</a>
            </div>
            <%}
        %>
   
</li>